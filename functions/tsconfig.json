{
  "compilerOptions": {
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2016",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "compileOnSave": true
}
